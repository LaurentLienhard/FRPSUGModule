{
    "version": "2.0.0",
    "windows": {
        "command": "${env:windir}/System32/WindowsPowerShell/v1.0/powershell.exe",
        "args": [
            "-NoProfile",
            "-ExecutionPolicy",
            "Bypass",
            "-command"
        ]
    },
    "linux": {
        "command": "/usr/bin/pwsh",
        "args": [
            "-NoProfile"
        ]
    },
    "osx": {
        "command": "/usr/local/bin/pwsh",
        "args": [
            "-NoProfile"
        ]
    },
    "type": "shell",
    "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
    },
    "tasks": [
        {
            "label": "AllPesterTest",
            "type": "shell",
            "group": "test",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "command": "Write-Host 'Invoking Pester...'; $ProgressPreference = 'SilentlyContinue'; Invoke-Pester -PesterOption @{IncludeVSCodeMarker=$true};Invoke-Command { Write-Host 'Completed Test task in task runner.' }",
            "problemMatcher": "$pester"
        },
        {
            "label": "Clean",
            "type": "shell",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "command": "Write-Host 'Invoking CI/CD Clean File on ${workspaceFolderBasename} module ...'; ${workspaceFolder}/CI/Clean.ps1",
            "problemMatcher": []
        },
        {
            "label": "Compile",
            "type": "shell",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "always",
